@model Slider
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1>Slider Edit</h1>
            <form asp-action="edit" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="SecondTitle" class="form-label">Title2</label>
                    <input asp-for="SecondTitle" class="form-control">
                    <span class="text-danger" asp-validation-for="SecondTitle"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Button Text</label>
                    <input asp-for="Description" class="form-control">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Image" class="form-label">Image</label>
                    <input class="form-control img-upload-input" asp-for="ImageFile">
                    <span class="text-danger d-block" asp-validation-for="ImageFile"></span>

                    <div class="img-box" style=" margin: 10px; display: flex; justify-content: center; align-items: center;">
                        <img src="~/uploads/sliders/@Model.Image" style="width:130px;height:130px;object-fit:cover;" />
                    </div>
                </div>
                <button type="submit" class="btn btn-dark">Submit</button>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}