@model Settings
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1>Slider Edit</h1>
            <form asp-action="edit" method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <label asp-for="Value" class="form-label">Value</label>
                    <input class="form-control img-upload-input" asp-for="ImageFile">
                    <span class="text-danger d-block" asp-validation-for="ImageFile"></span>

                    if(@Model.Key.Contains("image")){

                    <div class="img-box" style=" margin: 10px; display: flex; justify-content: center; align-items: center;">
                        <img src="~/uploads/brands/@Model.Value" style="width:130px;height:130px;object-fit:cover;" />
                    </div>
                    }else{

                        <div>
                             <input class="form-control" asp-for="Value">
                        </div>
                    }

                </div>
                <button type="submit" class="btn btn-dark">Submit</button>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}