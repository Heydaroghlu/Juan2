
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}
@model List<Category>
<div class="container">
    <h1 style="margin-top:1rem">Kateqoriyalar</h1>
    <a style="margin-bottom:1rem" class="btn btn-warning" asp-action="create">Yeni Kateqoriya</a>
    <div class="col-lg-12">
        <form method="get" asp-action="index" class="my-3">
            <div class="row d-flex align-items-center">
                <div class="col-xl-3">
                    <select class="form-control" name="deleted">
                        <option value="">
                            Bütün Kateqoriyalar
                        </option>
                        <option value="true">Silinən Kateqoriyalar</option>

                    </select>
                </div>
                <div class="col-xl-6">
                    <input type="text" name="search" class="form-control filter" autocomplete="off" value="@ViewBag.search" id="exampleInputEmail1" placeholder="Axtar..." />
                </div>
                <button type="submit" class="btn btn-secondary my-2">Axtar</button>
            </div>

        </form>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Kateqoriya Adı</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.IsDeleted == false)
                {
                    <tr>
                        <th scope="row">1</th>
                        <td>@item.Name</td>
                        <td><a class="btn btn-success" asp-action="update" asp-route-id="@item.Id">Redaktə Et</a></td>
                        <td><a class="btn btn-danger delete-btn" asp-action="delete" data-id="@item.Id" data-name="category" asp-route-id="@item.Id">Sil</a></td>

                    </tr>
                }
                else
                {
                    <tr>
                        <th scope="row">1</th>
                        <td style="color:red">@item.Name</td>
                        <td><a class="btn btn-success berpa-btn" asp-action="delete" data-id="@item.Id" data-name="category" asp-route-id="@item.Id">Bərpa Et</a></td>

                    </tr>
                }
            }

        </tbody>
    </table>
</div>

