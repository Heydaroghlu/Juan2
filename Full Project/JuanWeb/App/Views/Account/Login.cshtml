@model LoginDto
@{
    ViewData["Title"] = "Login";
}

@{
    ViewData["Title"] = "Login/Register";
}

<main>
    <!-- breadcrumb area start -->
    <div class="breadcrumb-area bg-img" data-bg="assets/img/banner/breadcrumb-banner.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-wrap text-center">
                        <nav aria-label="breadcrumb">
                            <h1 class="breadcrumb-title">Login-Register</h1>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Login-Register</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb area end -->
    <!-- login register wrapper start -->
    <div class="login-register-wrapper section-padding">
        <div class="container">
            <div class="member-area-from-wrap">
                <div class="row">
                    <!-- Login Content Start -->
                    <div class="col-lg-12">
                        <div class="login-reg-form-wrap">
                            <h2>Sign In</h2>
                            <form asp-action="login" method="post" class="position-relative">
                                <div class="single-input-item">
                                    <input asp-for="Email" placeholder="Email or Username"  />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="single-input-item">
                                    <input asp-for="Password" placeholder="Enter your Password"  />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="single-input-item">                                             <div asp-validation-summary="ModelOnly" class="text-danger position-absolute"></div>
                                    <div style="text-align:end">                                  
                                        <a asp-action="forgotpassword" asp-controller="account" class="forget-pwd">Forget Password?</a>
                                    </div>
                                </div>
                                <div class="single-input-item">
                                    <button type="submit" class="btn">Login</button>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                    <!-- Login Content End -->
                    <!-- Register Content Start -->
             
                    <!-- Register Content End -->
                </div>
            </div>
        </div>
    </div>
    <!-- login register wrapper end -->
</main>
<!-- main wrapper end -->
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}