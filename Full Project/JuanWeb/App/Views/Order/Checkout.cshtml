            <div class="row">
                <!-- Checkout Billing Details -->
                <div class="col-lg-6">
                    <div class="checkout-billing-details-wrap">
                        <h4 class="checkout-title">Billing Details</h4>
                        <div class="billing-form-wrap">
                            <form id="form" asp-action="checkout" method="post">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="single-input-item">
                                            <label asp-for="@Model.FullName" class="required">Full Name</label>
                                            <input asp-for="@Model.FullName" type="text" id="f_name" placeholder="Full Name" required />
                                            <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="single-input-item">
                                    <label asp-for="@Model.Email" class="required">Email Address</label>
                                    <input asp-for="@Model.Email" type="email" id="email" placeholder="Email Address" required />
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>

                                </div>

                                <div class="single-input-item">
                                    <label asp-for="Country" class="required">Country</label>
                                    <select asp-for="Country">
                                        <option value="Afghanistan">Afghanistan</option>
                                        <option value="Albania">Albania</option>
                                        <option value="Algeria">Algeria</option>
                                        <option value="Armenia">Armenia</option>
                                        <option value="Bangladesh">Bangladesh</option>
                                        <option value="India">India</option>
                                        <option value="Pakistan">Pakistan</option>
                                        <option value="England">England</option>
                                        <option value="London">London</option>
                                        <option value="London">London</option>
                                        <option value="Chaina">China</option>
                                    </select>
                                    <span asp-validation-for="@Model.Country" class="text-danger"></span>

                                </div>

                                <div class="single-input-item">
                                    <label asp-for="@Model.Addresses" class="required mt-20">Street address</label>
                                    <input asp-for="@Model.Addresses" id="street-address" placeholder="Street address Line 1" required />
                                    <span asp-validation-for="@Model.Addresses" class="text-danger"></span>

                                </div>


                                <div class="single-input-item">
                                    <label asp-for="@Model.City" class="required">Town / City</label>
                                    <input asp-for="@Model.City" id="town" placeholder="Town / City" required />
                                    <span asp-validation-for="@Model.City" class="text-danger"></span>

                                </div>

                                <div class="single-input-item">
                                    <label asp-for="@Model.Aparment">State / Divition</label>
                                    <input asp-for="@Model.Aparment" id="state" placeholder="State / Divition" />
                                    <span asp-validation-for="@Model.Aparment" class="text-danger"></span>

                                </div>

                                <div class="single-input-item">
                                    <label asp-for="@Model.Phone" >Phone</label>
                                    <input asp-for="@Model.Phone" id="phone" placeholder="Phone" />
                                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                                </div>

                                <div class="single-input-item">
                                    <label for="ordernote">Order Note</label>
                                    <textarea name="ordernote" id="ordernote" cols="30" rows="3" placeholder="Notes about your order, e.g. special notes for delivery."></textarea>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Order Summary Details -->
                <div class="col-lg-6">
                    <div class="order-summary-details">
                        <h4 class="checkout-title">Your Order Summary</h4>
                        <div class="order-summary-content">
                            <!-- Order Summary Table -->
                            <div class="order-summary-table table-responsive text-center">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Products</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.basketItemsVM)
                                        {
                                            <tr>
                                                <td>
                                                    <a href="product-details.html">@item.Name <strong> × @item.Count</strong></a>
                                                </td>
                                                <td>$@item.Price</td>
                                            </tr>

                                        }
                                    </tbody>
                                    <tfoot>
                                      
                                        <tr>
                                            <td>Total Amount</td>
                                            <td><strong>$@Model.TotalAmount</strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <div class="summary-footer-area">
                                <button form="form" type="submit" class="btn btn-sqr">Place Order</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- checkout main wrapper end -->
</main>
<!-- main wrapper end -->

